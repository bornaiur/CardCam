<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#489CFF"
tools:context="com.dongyang.pjw.cardcam.LogoActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">
    <ImageView
        android:src="@drawable/businesscard_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textSize="34sp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:text="CardSaver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_id"
                android:textColorHint="#ffffff"
                android:hint="아이디 입력"
                android:textColor="#ffffff"
                android:textCursorDrawable="@null"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textCursorDrawable="@null"
                android:id="@+id/edit_pw"
                android:textColorHint="#ffffff"
                android:hint="패스워드 입력"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:text="로그인"
            android:clickable="true"
            android:onClick="loginClicked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="registerClicekd"
        android:clickable="true"
        android:text="회원가입"
        android:layout_width="340dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:id="@+id/success_layout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/user_nickname"
            android:text="nickname"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <TextView
            android:id="@+id/user_email"
            android:text="eamil_address"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:gravity="center"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/logout"
                android:background="@color/colorAccent"
                android:textColor="#fff"
                android:text="로그아웃"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>

            <Button
                android:id="@+id/goMain"
                android:background="@color/colorAccent"
                android:textColor="#fff"
                android:text="메인 이동"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>

    <com.kakao.usermgmt.LoginButton
        android:layout_marginTop="5dp"
        android:id="@+id/com_kakao_login"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center" />



    <TextView
        android:visibility="invisible"
        android:id="@+id/testView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

</RelativeLayout>